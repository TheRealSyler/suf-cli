{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "watch": true,
    "declaration": true,
    // "declarationDir": "dist",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true
  },
  "include": [
    "src/**/*",
    "rollup.config.ts"
  ],
  "exclude": [
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "node_modules",
    "types",
    "src/test",
    "suf.config.ts",
    "jest.setup.ts"
  ]
}